# Production Environment Configuration Template
# Copy this to .env.production and fill in production values

# Flask Configuration
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION
DEBUG=False
FLASK_ENV=production

# Database Configuration (Production)
DB_HOST=localhost
DB_PORT=3306
DB_USER=eyecare_prod_user
DB_PASSWORD=STRONG_PASSWORD_HERE
DB_NAME=eyecare_db
DB_CHARSET=utf8mb4

# Redis Configuration (Production Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Production)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_production_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_DEFAULT_SENDER=noreply@eyecare.com

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Settings
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Pool Settings
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_MAX_OVERFLOW=40
SQLALCHEMY_POOL_RECYCLE=3600

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=2

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=200 per day;50 per hour

# Server Configuration
SERVER_NAME=your-domain.com
PREFERRED_URL_SCHEME=https
