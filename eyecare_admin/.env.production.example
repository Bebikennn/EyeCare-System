# Production template
# Copy to `.env.production` on the server and fill in REAL values.
# app.py will auto-load production config when `.env.production` exists.

# Flask
FLASK_ENV=production
DEBUG=False
SECRET_KEY=CHANGE_ME_USE_A_LONG_RANDOM_VALUE

# Database (MySQL/MariaDB)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=CHANGE_ME
DB_NAME=eyecare_db
DB_CHARSET=utf8mb4

# App
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Cookies / sessions
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=2
PREFERRED_URL_SCHEME=https

# CORS (usually not needed if frontend is same-origin)
# CORS_ORIGINS=https://admin.example.com
CORS_ORIGINS=

# Rate limiting (recommended: redis)
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=5000 per day;1000 per hour

# Mail (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=

# Sentry (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
