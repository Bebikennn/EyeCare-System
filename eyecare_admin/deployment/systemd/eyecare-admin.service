[Unit]
Description=EyeCare Admin (Flask) via Gunicorn
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/eyecare_admin
EnvironmentFile=/opt/eyecare_admin/.env.production

# If you use a venv in /opt/eyecare_admin/.venv
ExecStart=/opt/eyecare_admin/.venv/bin/gunicorn -c /opt/eyecare_admin/gunicorn.conf.py wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
